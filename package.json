{
  "name": "slidev-theme-watabegg",
  "version": "1.0.3",
  "type": "module",
  "author": "watabegg",
  "description": "watabeggが使うためのSlidevテーマ",
  "keywords": [
    "slidev-theme",
    "slidev",
    "education",
    "exam",
    "teaching"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
